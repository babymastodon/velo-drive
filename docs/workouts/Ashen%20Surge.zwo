    <Warmup Duration="240" PowerLow="0.40" PowerHigh="0.80" Cadence="90" >
      <textevent timeoffset="60" duration="10" message="Ease into the ember glow—smooth to 80%, quiet shoulders, 90 rpm, breathe low and steady." />
    </Warmup>
    <SteadyState Duration="150" Power="0.80" Cadence="92" >
    </SteadyState>
    <Cooldown Duration="60" PowerLow="0.80" PowerHigh="0.60" />
