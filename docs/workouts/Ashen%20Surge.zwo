      <textevent timeoffset="495" duration="10" message="Ashen surges next—5x45s. Strike clean, keep the hips still, then drift through the soot." />
    </SteadyState>
    <IntervalsT Repeat="5" OnDuration="45" OffDuration="45" OnPower="1.20" OffPower="0.60" Cadence="100" CadenceResting="88" />
